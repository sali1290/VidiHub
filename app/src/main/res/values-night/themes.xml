<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VidiHub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_primary_color</item>
        <item name="android:navigationBarColor">@color/dark_primary_color</item>
        <!-- Customize your theme here. -->
        <!-- Bottom navigation bar color. -->
        <item name="bottomNavigationStyle">@style/bottomNavigation</item>
        <item name="android:textColor">@color/secondary_text</item>

    </style>

    <style name="bottomNavigation" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/primary_color</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="fragmentBackground" parent="Theme.AppCompat.DayNight">
        <item name="android:background">@color/fragment_background</item>
    </style>

    <style name="imageTint" parent="Theme.AppCompat.DayNight">
        <item name="tint">@color/black</item>
    </style>

    <style name="profileItemBackground" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/light_primary_color</item>
    </style>

    <style name="profileItemTextBackground" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/profile_text_background</item>
    </style>

    <style name="titlesTextColor" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="deleteIcon" parent="Theme.AppCompat.DayNight">
        <item name="tint">@color/dark_primary_color</item>
        <item name="backgroundTint">@color/fragment_background</item>
    </style>


